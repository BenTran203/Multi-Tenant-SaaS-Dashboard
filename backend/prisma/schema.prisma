// This is your Prisma schema file
// LEARNING: Prisma is an ORM (Object-Relational Mapping) tool
// It helps you interact with your database using JavaScript/TypeScript instead of raw SQL

// LEARNING: Generator tells Prisma to create a JavaScript/TypeScript client
generator client {
  provider = "prisma-client-js"
}

// LEARNING: Datasource defines which database you're using (PostgreSQL in our case)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MODEL
// ============================================
// LEARNING: This represents the "users" table in your database
model User {
  id        String   @id @default(uuid()) // UUID = Universally Unique Identifier
  email     String   @unique              // Must be unique across all users
  username  String   @unique              // Must be unique across all users
  password  String                         // Will store HASHED password (never plain text!)
  avatarUrl String?  @map("avatar_url")   // Optional field (? means nullable)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // LEARNING: RELATIONSHIPS - A user can have many...
  ownedServers  Server[]       @relation("ServerOwner")   // Servers they created
  serverMembers ServerMember[]                             // Servers they're a member of
  messages      Message[]                                  // Messages they sent

  // LEARNING: @map() changes the database column name (camelCase in code, snake_case in DB)
  @@map("users") // Table name in database
}

// ============================================
// SERVER MODEL (like Discord servers/guilds)
// ============================================
// LEARNING: A server is a workspace/community
model Server {
  id         String   @id @default(uuid())
  name       String
  iconUrl    String?  @map("icon_url")
  inviteCode String   @unique @default(uuid()) @map("invite_code") // Unique code for inviting users
  ownerId    String   @map("owner_id")                              // Foreign Key to User
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // LEARNING: RELATIONSHIPS - A server belongs to one owner, has many members and channels
  owner   User           @relation("ServerOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members ServerMember[]
  channels Channel[]

  // LEARNING: onDelete: Cascade means if a user is deleted, their servers are also deleted
  @@map("servers")
}

// ============================================
// SERVER MEMBER MODEL (Many-to-Many relationship)
// ============================================
// LEARNING: This is a "join table" connecting users and servers
// Why? Because a user can be in many servers, and a server can have many users
model ServerMember {
  id       String       @id @default(uuid())
  role     MemberRole   @default(MEMBER) // ADMIN or MEMBER
  userId   String       @map("user_id")
  serverId String       @map("server_id")
  joinedAt DateTime     @default(now()) @map("joined_at")

  // LEARNING: RELATIONSHIPS
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)

  // LEARNING: A user can only be a member of a server once
  @@unique([userId, serverId])
  @@map("server_members")
}

// LEARNING: ENUM - A field can only have specific values
enum MemberRole {
  ADMIN  // Can manage server, channels, members
  MEMBER // Regular user
}

// ============================================
// CHANNEL MODEL
// ============================================
// LEARNING: Channels are chat rooms within a server
model Channel {
  id        String      @id @default(uuid())
  name      String
  type      ChannelType @default(TEXT)
  serverId  String      @map("server_id")
  position  Int         @default(0) // For ordering channels
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")

  // LEARNING: RELATIONSHIPS
  server   Server    @relation(fields: [serverId], references: [id], onDelete: Cascade)
  messages Message[]

  @@map("channels")
}

// LEARNING: Channel types (TEXT for now, VOICE for later phases)
enum ChannelType {
  TEXT
  VOICE
}

// ============================================
// MESSAGE MODEL
// ============================================
// LEARNING: Messages are the actual chat messages users send
model Message {
  id        String   @id @default(uuid())
  content   String   @db.Text // @db.Text allows longer messages than String
  userId    String   @map("user_id")
  channelId String   @map("channel_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deleted   Boolean  @default(false) // Soft delete (mark as deleted instead of removing)

  // LEARNING: RELATIONSHIPS
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@map("messages")
}

