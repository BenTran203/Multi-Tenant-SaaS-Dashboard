// This is your Prisma schema file
// It helps you interact with your database using JavaScript/TypeScript instead of raw SQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MODEL
// ============================================
model User {
  id        String   @id @default(uuid()) // Universally Unique Identifier
  email     String   @unique              // Must be unique across all users
  username  String   @unique              // Must be unique across all users
  password  String                         // Will store HASHED password 
  avatarUrl String?  @map("avatar_url")   // Optional field
  bio       String?  @db.Text 
  isEmailVerified        Boolean   @default(false) @map("is_email_verified")
  emailVerificationToken String?   @map("email_verification_token")
  emailVerificationExpires DateTime? @map("email_verification_expires")
  passwordResetToken     String?  @map("password_reset_token")
  passwordResetExpires   DateTime? @map("password_reset_expires")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  //A user can have many server, messages
  ownedServers  Server[]       @relation("ServerOwner")   // Servers they created
  serverMembers ServerMember[]                             // Servers they're a member of
  messages      Message[]                                  // Messages they sent

  @@map("users") // Table name in database
}

// ============================================
// SERVER MODEL (like Discord servers/guilds)
// ============================================


model Server {
  id              String   @id @default(uuid())
  name            String
  serverCode      String   @unique @map("server_code")
  codeGeneratedAt DateTime @default(now()) @map("code_generated_at")
  iconUrl         String?  @map("icon_url")
  theme           String?  @default("nature")
  ownerId         String   @map("owner_id")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  //A server belongs to one owner, has many members and channels
  owner    User           @relation("ServerOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members  ServerMember[]
  channels Channel[]

  @@map("servers")
}

// ============================================
// SERVER MEMBER MODEL (Many-to-Many relationship)
// ============================================
// Why? Because a user can be in many servers, and a server can have many users
model ServerMember {
  id       String       @id @default(uuid())
  role     MemberRole   @default(MEMBER) // ADMIN or MEMBER
  userId   String       @map("user_id")
  serverId String       @map("server_id")
  nickname String? 
  joinedAt DateTime     @default(now()) @map("joined_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@unique([userId, serverId])
  @@map("server_members")
}

enum MemberRole {
  ADMIN  // Can manage server, channels, members
  MEMBER // Regular user
}

// ============================================
// CHANNEL MODEL
// ============================================
model Channel {
  id        String      @id @default(uuid())
  name      String
  type      ChannelType @default(TEXT)
  serverId  String      @map("server_id")
  position  Int         @default(0) // For ordering channels
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")

  server   Server    @relation(fields: [serverId], references: [id], onDelete: Cascade)
  messages Message[]

  @@map("channels")
}

enum ChannelType {
  TEXT
  VOICE
}

// ============================================
// MESSAGE MODEL
// ============================================

model Message {
  id        String   @id @default(uuid())
  content   String   @db.Text // @db.Text allows longer messages than String
  userId    String   @map("user_id")
  channelId String   @map("channel_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deleted   Boolean  @default(false) // Soft delete (mark as deleted instead of removing)

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@map("messages")
}

